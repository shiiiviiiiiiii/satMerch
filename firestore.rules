rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection - public read, admin write
    match /products/{productId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
                      request.auth.token.admin == true; // Admin only write
    }
    
    // Users collection - user can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == userId;
      
      // Cart subcollection - user can only access their own cart
      match /cart/{cartItemId} {
        allow read, write: if request.auth != null && 
                              request.auth.uid == userId;
      }
      
      // Orders subcollection - user can read their own orders, admin can read all
      match /orders/{orderId} {
        allow read: if request.auth != null && 
                       (request.auth.uid == userId || 
                        request.auth.token.admin == true);
        allow write: if request.auth != null && 
                        request.auth.uid == userId;
      }
    }
    
    // Orders collection - admin can read all orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
                            request.auth.token.admin == true;
    }
    
    // Admin collection - only admins can access
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
                            request.auth.token.admin == true;
    }
  }
}
